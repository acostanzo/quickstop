{
  "version": "2.0",
  "description": "Patterns for categorizing gitignored files when symlinking to worktrees",

  "always_skip": {
    "description": "Files/directories that should never be symlinked - regenerate via package managers",
    "patterns": {
      "node_dependencies": ["node_modules/", "node_modules/**"],
      "php_dependencies": ["vendor/"],
      "python_artifacts": ["__pycache__/", "*.pyc", "*.pyo", ".venv/", "venv/", "env/", "site-packages/"],
      "ios_dependencies": ["Pods/"],
      "java_kotlin": [".gradle/"],
      "rust_java_build": ["target/"],
      "elixir": ["deps/", "_build/"],
      "ruby": [".bundle/"],
      "legacy": ["bower_components/"],
      "pnpm": [".pnpm-store/"],
      "build_output": ["dist/", "build/", "out/", "output/"],
      "framework_builds": [".next/", ".nuxt/", ".svelte-kit/"],
      "test_coverage": ["coverage/", ".nyc_output/"],
      "bundled_assets": ["*.bundle.js", "*.min.js", "*.min.css"],
      "bundler_caches": [".parcel-cache/", ".turbo/", ".webpack/"],
      "caches": [".cache/", "cache/", "caches/"],
      "temporary": ["tmp/", "temp/", ".tmp/", ".temp/"],
      "logs": ["*.log", "logs/", "*.log.*"],
      "linter_caches": [".eslintcache", ".stylelintcache", ".prettiercache"],
      "editor_swap": ["*.swp", "*.swo", "*~"],
      "os_artifacts": [".DS_Store", "Thumbs.db"],
      "git_internals": [".git/"]
    }
  },

  "always_symlink": {
    "description": "Files/directories that should always be symlinked - shared configuration",
    "patterns": {
      "environment": [".env", ".env.*", ".env.local"],
      "credentials": ["credentials*.json", "serviceAccount*.json", "*.pem", "*.key"],
      "package_config": [".npmrc", ".yarnrc", ".yarnrc.yml", ".nvmrc", ".node-version", ".tool-versions", "pnpm-workspace.yaml"],
      "ide_settings": [".vscode/", ".idea/"],
      "project_config": ["config/", "conf/", "*.local", "*.local.*", "settings.local.json", "appsettings.local.json"]
    }
  },

  "ask_user": {
    "description": "Conditions that trigger asking the user",
    "threshold_mb": 10,
    "patterns": ["*.sqlite", "*.sqlite3", "*.db", "data/", "*.rdb"]
  },

  "installer_hints": {
    "description": "Reminders for regenerating skipped dependencies",
    "node_modules": "npm install",
    "vendor": "composer install / go mod download",
    "Pods": "pod install",
    ".venv": "python -m venv .venv && pip install -r requirements.txt",
    "target": "cargo build / mvn compile",
    ".gradle": "gradle build",
    "deps": "mix deps.get",
    "_build": "mix compile",
    ".bundle": "bundle install"
  }
}
